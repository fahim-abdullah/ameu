<style type="text/css">
    label {
        font-family: "Medium";
    }
    footer {
        margin-top: 100px;
    }
</style>

<br><br><br>
<div class="container">
    <div class="row">
        <div class="col-md-5 col-12">
            <h1 class="demi">Create New User</h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5 col-12 py-4">
        <%= form_for @user do |f| %>
            <label>Username</label>
            <%= f.text_field :username, class: "col form-control" %>

            <label>Email</label>
            <%= f.text_field :email, class: "col form-control" %>

            <label>Password</label>
            <%= f.password_field :password, class: "col form-control" %>

            <%= f.submit class: "my-3 btn btn-success" %>

        <% end %>
        </div>
    </div>
</div>