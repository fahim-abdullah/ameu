<style type="text/css">
    label {
        font-family: "Medium";
    }
    footer {
        margin-top: 100px;
    }

    #panel-box i {
        font-size: 80px;
        margin-top: 20px;
        text-shadow: 0 5px 3px rgba(0,0,0,0.05);
    }

    #panel-box h4 {
        font-size: 20px;
        margin-top: 15px;
    }

    #panel-box .single_service_text {
        box-shadow: 0 4px 4px rgba(0,0,0,0.08)
    }
</style>

<br><br><br><br>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="demi text-center display-4">AMEU Admin Panel</h1>
            <p class="text-dark text-center">You can add edit/update and delete information from here!</p>
            <hr class="my-4">
        </div>
    </div>

    
    <div class="service_part py-0">
        <div class="col-12 py-4">
            <div class="service_part_iner py-0">
                <div class="row" id="panel-box" align="center">
                    
                    <div class="col-md-3">
                        <%= link_to all_members_path do %>
                        <div class="single_service_text my-0">
                            <i class="fas fa-users" style="font-size: 80px"></i>
                            <h4>Members</h4>
                        </div>
                        <% end %>
                    </div>

                    <div class="col-md-3">
                        <%= link_to all_events_path do %>
                        <div class="single_service_text my-0">
                            <i class="fas fa-calendar-day"></i>
                            <h4>Events</h4>
                        </div>
                        <% end %>
                    </div>
                    <div class="col-md-3">
                        <%= link_to all_econsiders_path do %>
                        <div class="single_service_text my-0">
                            <i class="far fa-newspaper"></i>
                            <h4>E-Considers</h4>
                        </div>
                        <% end %>
                    </div>
                    <div class="col-md-3">
                        <%= link_to all_dialogues_path do %>
                        <div class="single_service_text my-0">
                            <i class="fas fa-comments"></i>
                            <h4>Dialogues</h4>
                        </div>
                        <% end %>
                    </div>

                </div>
            </div>
        </div>
    </div>
    
</div>