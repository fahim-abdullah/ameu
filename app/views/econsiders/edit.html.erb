<%= form_for @econsider do |f| %>

    <label>Title</label>
    <%= f.text_field :title, class: "col-md-2 col form-control" %>

    <label>Image</label>
    <%= f.file_field :postimg, class: "col-md-2 col form-control" %>

    <label>Post heading</label>
    <%= f.text_field :post_heading, class: "col-md-2 col form-control" %>

    <label>Author</label>
    <%= f.text_field :author, class: "col-md-2 col form-control" %>

    <label>Post</label>
    <%= f.text_area :post, class: "col-md-4 col form-control" %>

    <%= f.submit class: "btn btn-success" %>
    <%= link_to "Back", new_event_path, :class => "btn btn-outline-primary" %>

<% end %>