<style type="text/css">
    label {
        font-family: "Medium";
    }
    footer {
        margin-top: 100px;
    }
</style>

<br><br><br>
<div class="container">
    <div class="row">
        <div class="col-md-5 col-12">
            <h1 class="demi">Edit Econsider</h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5 col-12 py-4">
        <%= form_for @econsider do |f| %>
            <label>Title</label>
            <%= f.text_field :title, class: "col form-control" %>

            <label>Image - Must be in ratio 2:1 (Width x Height) </label>
            <%= f.file_field :postimg, class: "col form-control" %>

            <label>Sub heading</label>
            <%= f.text_field :post_heading, class: "col form-control" %>

            <label>Author</label>
            <%= f.text_field :author, class: "col form-control" %>

            <label>Post</label>
            <%= f.text_area :post, class: "col form-control", style: "height: 300px" %>

            <%= f.submit class: "btn btn-success" %>
            <%= link_to "Back", all_econsiders_path, :class => "my-3 btn btn-outline-primary" %>

        <% end %>
        </div>
    </div>
</div>