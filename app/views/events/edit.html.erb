<style type="text/css">
    label {
        font-family: "Medium";
    }
    footer {
        margin-top: 100px;
    }
</style>

<br><br><br>
<div class="container">
    <div class="row">
        <div class="col-md-5 col-12">
            <h1 class="demi">Create New Dialogue</h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5 col-12 py-4">
        <%= form_for @event do |f| %>

            <label>Title</label>
            <%= f.text_field :title, class: "col form-control" %>

            <label>Image <span class="text-danger">(Must be Ratio 1:1)</span> </label>
            <%= f.file_field :eventpic, class: "col form-control" %>

            <label>Date Time <span class="text-danger">(Format : Monday, 17 May 2019, 9:00am)</span></label>
            <%= f.text_field :datetime, class: "col form-control" %>

            <label>Venue</label>
            <%= f.text_field :venue, class: "col form-control" %>

            <label>Find More Link</label>
            <%= f.text_field :link, class: "col form-control" %>

            <%= f.submit class: "btn btn-success" %>
            <%= link_to "Back", all_events_path, :class => "my-3 btn btn-outline-primary" %>

        <% end %>
        </div>
    </div>
</div>