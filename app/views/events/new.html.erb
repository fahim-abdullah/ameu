<%= form_for @event do |f| %>

    <label>Title</label>
    <%= f.text_field :title, class: "col-md-2 col form-control" %>

    <label>Image</label>
    <%= f.file_field :eventpic, class: "col-md-2 col form-control" %>

    <label>Datetime</label>
    <%= f.text_field :datetime, class: "col-md-2 col form-control" %>

    <label>Venue</label>
    <%= f.text_field :venue, class: "col-md-2 col form-control" %>

    <label>Link</label>
    <%= f.text_field :link, class: "col-md-2 col form-control" %>

    <%= f.submit class: "btn btn-success" %>
    <%= link_to "Back", new_event_path, :class => "btn btn-outline-primary" %>

<% end %>