<p><%= @member.region %></p>
<p><%= @member.office %></p>
<%= image_tag @member.profpic.url, width: "100px" %>
<p><%= @member.name %></p>
<p><%= @member.designation %></p>
<p><%= @member.facebook %></p>
<p><%= @member.linkedin %></p>
<p><%= @member.twitter %></p>
<p><%= @member.ig %></p>
<p><%= @member.email %></p>

<div class="col-md-3 col-12">
    <div class="card member-card" align="center">
        <img class="rounded-circle" src="http://philadelphiacontemporary.org/wp-content/uploads/2018/11/david-van-der-leer-portrait-01-square-780x780.jpg" width="60%" />
        <p class="member-name"><%= @member.name %></p>
        <p class="member-title"><%= @member.designation %></p>
        
        <div class="member-social">
            <p><a href="<%= @member.facebook %>"><i class="fab fa-facebook-f"></i></a>
            <a href="<%= @member.linkedin %>"><i class="fab fa-linkedin-in"></i></a>
            <a href="<%= @member.twitter %>"><i class="fab fa-twitter"></i></a>
            <a href="<%= @member.ig %>"><i class="fab fa-instagram"></i></a>
            <a data-toggle="tooltip" title="<%= @member.email %>"><i class="far fa-envelope"></i></a></p>
        </div>
        
    </div>
</div>

<script>
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();   
});
</script>